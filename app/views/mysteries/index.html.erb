<div class="container">
  <% if @tag_mysteries.present? %>
  <div class="row">
    <h3>"<%= @tag %>"に関する謎</h3>
  </div>

  <%= render "layouts/mystery",mysteries: @tag_mysteries %>

  <div class="row justify-content-center mt-5">
    <%= paginate (@tag_mysteries), param_name: "tag_page" %>
  </div>

  <% else %>
  <div class="row">
    <h3>全ての謎 (全<%= @mystery_all.count %>件 <small>-新着順-</small>)</h3>
  </div>
  <div class="row justify-content-center my-3">
    <%= render "layouts/genre",genres: @genres,mysteries: @mystery_all %>
  </div>

  <%= render "layouts/mystery",mysteries: @mysteries %>

  <div class="row justify-content-center mt-5">
    <%= paginate (@mysteries), param_name: "mysteries_page" %>
  </div>

  <% end %>

</div>