<div class="container">
  <div class="row">
  <% if @datas.empty? %>
    <h3>" <%= @value %> "の謎はありません</h3>
  </div>
  <div class="row justify-content-center my-3">
    <%= render "layouts/genre",genres: @genres,mysteries: @mysteries %>
  </div>
  <% else %>
    <h3><strong >" <%= @value %> " </strong>の謎<span class="small"> (全<%= @datas.count %>件)</span></h3>
  </div>
  <div class="row justify-content-center my-3">
    <%= render "layouts/genre",genres: @genres,mysteries: @mysteries %>
  </div>

  <%= render "layouts/mystery",mysteries: @datas %>
  
  <% end %>

</div>
