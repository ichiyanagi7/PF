<div class="row">
     <% mysteries.each do |mystery| %>
      <div class="col-sm-12 col-md-4 mt-3">
        <%= link_to mystery_path(mystery) do %>
          <div class="card h-100">
            <%= image_tag mystery.question_image.variant(resize:"800x800") ,class:"card-img-top" %>
            <div class="card-body">
              <p class="card-text text-center text-dark border-bottom pb-3"><%= mystery.title %></p>
              <p class="card-text text-center text-dark">
                <span id="review-rating-<%= mystery.id %>">難易度: </span> | <i class="far fa-thumbs-up"></i> <%= mystery.favorites.count %> | <i class="far fa-comment"></i> <%= mystery.comments.count %></p>
            </div>
          </div>
          <!--難易度平均表示 jquery.raty.js------------------------------>
              <script>
                $('#review-rating-<%= mystery.id %>').raty({
                  starOff: "<%= asset_path('star-off.png') %>",
                  starOn: "<%= asset_path('star-on.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  half: true,
                  readOnly: true,
                  score: "<%= mystery.comments.average(:rate).to_f.round(1) %>",
                });
              </script>
          <!-------------------------------------------------------------->
        <% end %>
      </div>
    <% end %>
  </div>