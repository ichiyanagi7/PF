<div class="container">
  <div class="row justify-content-center mb-5">
    <h2><i class="fas fa-crown"></i> ランキング <i class="fas fa-crown"></i></h2>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h4 class="mb-5 text-center border-bottom">お気に入り数</h4>

      <% i=1 %>
      <% @mysteries.each do |mystery| %>
        <%= link_to mystery_path(mystery) ,class:"text-dark" do %>
        <div class="media mb-3 hover border">
          <%= image_tag mystery.question_image.variant(resize:"200x200") ,class:"align-self-start" %>
          <div class="media-body text-center">
            <h2 class="mt-3"><%= i.to_i %>位</h2>
            <p class="ranking-favorite mt-4"><i class="far fa-thumbs-up"></i>: <%= mystery.favorites.count %></p>
          </div>
        </div>
        <% end %>
        <% i+=1 %>
      <% end %>

    </div>

    <div class="col-md-6">
      <h4 class="text-center mb-5 border-bottom">謎投稿数</h4>
      <% i=1 %>
      <% @users.each do |user| %>
        <%= link_to user_path(user) ,class:"text-dark" do %>
        <div class="media mb-3 hover border">
          <% if user.image.attached? %>
          <%= image_tag user.image.variant(resize:"200x141") ,class:"align-self-start" %>
          <%# else %>
          <%#= image_tag "no_image.jpg",size:"200x141" %>
          <% end %>
          <div class="media-body text-center">
            <h2 class="mt-3"><%= i.to_i %>位</h2>
            <p class="ranking-favorite mt-4"><i class="far fa-question-circle"></i>: <%= user.mysteries.count %></p>
          </div>
        </div>
        <% end %>
        <% i+=1 %>
      <% end %>

    </div>

  </div>

</div>