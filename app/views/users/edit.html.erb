<div class="container">
  <div class="row">
    <h3>登録情報編集</h3>
  </div>

  <div class="row">
    <%= form_with model:@user,url:user_path(@user),method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :ニックネーム %>
      <%= f.text_field :name ,class:"form-control" %>
    </div>
     <div class="form-group">
      <%= f.label :自己紹介 %>
      <%= f.text_field :introduction ,class:"form-control" %>
    </div>
     <div class="form-group">
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :image ,class:"form-control-file" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存" ,class:"btn btn-success" %>
    </div>
    <%= link_to "戻る", :back,class:"btn btn-primary btn-sm" %>
    <% end %>
  </div>
  <div class="row justify-content-end">
    <%= link_to "退会する",unsubscribe_path(@user),class:"btn btn-dark btn-sm" %>
  </div>

</div>