<div class="container">
  <div class="row">
    <h3>謎一覧(全<%= @mystery_all.count %>件)</h3>
  </div>
  <div class="row mt-5">
    <% if @mysteries.present? %>
    <% @mysteries.each do |mystery| %>
      <div class="col-sm-3">
        <%= link_to admins_mystery_path(mystery) do %>
          <div class="card">
            <%= image_tag mystery.question_image ,class:"card-img-top" %>
            <div class="card-body">
              <p class="card-text text-center text-dark"><%= mystery.title %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <% else %>
    <h5>謎はまだありません。</h5>
    <% end %>
    </div>

    <div class="row justify-content-center mt-3">
      <%= paginate (@mysteries) %>
    </div>

</div>