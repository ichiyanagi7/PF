<div class="container">
  <div class="row mb-3">
    <h3>登録情報編集</h3>
  </div>

  <%= form_with model:@user,url:admins_user_path(@user),method: :patch do |f| %>
    <div class="row">
      <div class="form-group col-sm-12 col-md-5">
        <%= f.label :ニックネーム %>
        <%= f.text_field :name ,class:"form-control" %>
      </div>

      <div class="form-group col-sm-12 col-md-8">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction ,class:"form-control" %>
      </div>

      <div class="form-group col-sm-12">
        <%= f.radio_button :is_deleted,false,checked:true %>
        <%= f.label "有効",class:"mr-3" %>

        <%= f.radio_button :is_deleted,true %>
        <%= f.label "退会" %>
      </div>

      <div class="form-group col-sm-12">
        <%= f.submit "変更を保存" ,class:"btn btn-success btn-sm" %>
        <%= link_to "戻る", :back,class:"btn btn-outline-dark btn-sm ml-5" %>
      </div>

    </div>
  <% end %>

</div>