<div class="container">
  <%= form_with model:@genre ,url:admins_genres_path,method: :post ,local:true do |f| %>
  <div class="row">
    <div class="col-sm-5"><h3>ジャンル一覧</h3></div>
    <div class="col-sm-5 form-group">
     <%= f.label :ジャンル登録はこちらから %>
     <%= f.text_field :name,class:"form-control",placeholder:"ジャンル名を記入" %>
    </div>
    <div class="col-sm-2 form-group align-items-end d-flex">
      <%= f.submit "登録" ,class:"form-control btn btn-success" %>
    </div>
  </div>
  <% end %>

    <table class="table mt-3">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "削除",admins_genre_path(genre),method: :delete,class:"btn btn-danger btn-sm" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>

